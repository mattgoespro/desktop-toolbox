{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "baseUrl": ".",
    "lib": ["dom", "es2021"],
    "types": ["node", "react"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@redux/*": ["src/renderer/app/redux/*"],
      "@shared/*": ["src/renderer/app/shared/*"],
      "@theme/*": ["src/renderer/app/theme/*"],
      "main/*": ["src/main/*"],
      "renderer/*": ["src/renderer/*"],
      "src/*": ["src/*"]
    },
    "outDir": "dll",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src", "webpack"]
}
