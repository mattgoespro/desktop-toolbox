{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/renderer/.react-router/types/**/*",
    "node_modules/@react-router"
  ],
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".webpack",
    "rootDirs": ["src/main", "src/renderer/app", "src/renderer/.react-router/types/app"],
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"],
      "~/*": ["./*"]
    },
    "sourceMap": true
  }
}
