{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".webpack",
    "types": ["node", "react", "react-dom"],
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    },
    "sourceMap": true
  }
}
