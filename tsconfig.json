{
  "include": ["src/**/*", "webpack.*.config.ts"],
  "files": ["forge.config.ts"],
  "exclude": ["node_modules", ".webpack"],
  "compilerOptions": {
    "module": "es2022",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "types": ["node", "react", "react-dom"],
    "outDir": "dist",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    },
    "sourceMap": true
  }
}
