{
  "author": "hoppingmode",
  "name": "desktop-toolbox",
  "displayName": "Desktop Toolbox",
  "productName": "Desktop Toolbox",
  "description": "A desktop application providing a library of utility applications.",
  "version": "0.0.1",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start -l -i",
    "prestart": "npm run kill",
    "kill": "powershell -c 'taskkill /IM node.exe /F'",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "inspect": "npx asar list 'out/Desktop Toolbox-win32-x64/resources/app.asar'",
    "publish": "electron-forge publish",
    "lint": "eslint",
    "uninstall": "npm run kill && rm -rf node_modules && rm -f package-lock.json && rm -rf ~/AppData/Local/npm-cache && npm cache clean --force",
    "install": "npm install --os=win32 --arch=x64 --include=optional sharp"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@mui/styled-engine-sc": "^7.3.1",
    "@mui/system": "^7.3.1",
    "@react-router/node": "^7.8.0",
    "@react-router/serve": "^7.8.0",
    "@reduxjs/toolkit": "^2.8.2",
    "electron-squirrel-startup": "^1.0.1",
    "fs-extra": "^11.3.1",
    "isbot": "^5.1.29",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router": "^7.8.0",
    "sharp": "^0.34.3",
    "styled-components": "^6.1.19",
    "unzipper": "^0.12.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "optionalDependencies": {
    "@img/sharp-win32-x64": "0.34.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-vite": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@react-router/dev": "^7.8.0",
    "@timfish/forge-externals-plugin": "^0.2.1",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.2.1",
    "@types/react-dom": "^19.1.7",
    "@types/unzipper": "^0.10.11",
    "electron": "37.2.6",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
